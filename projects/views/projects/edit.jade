extends ../layout

block content
    h1.
    	Project ID #{project._id}
    form(action='/projects/edit/#{project._id}', method='post', name='updateproject', enctype='application/x-www-form-urlencoded')
		p Naziv projekta:
			input#inputProjectName(type='text', value='#{project.projectName}', name='projectName')
		p Opis projekta:
			input#inputProjectDescription(type='text', value='#{project.projectDescription}', name='projectDescription')
		p Cijena projekta:
			input#inputProjectPrice(type='text', value='#{project.projectPrice}', name='projectPrice')
		p Obavljeni poslovi:
			input#inputProjectFinishedWorks(type='text', value='#{project.projectFinishedWorks}', name='projectFinishedWorks')
		p Datum početka:
			input#inputProjectStartDate(type='date', value='#{project.projectStartDate}', name='projectStartDate')
		p Datum završetka:
			input#inputProjectEndDate(type='text', value='#{project.projectEndDate}', name='projectEndDate')
		p Članovi projektnog tima:
			input#inputProjectMembers(type='text', value='#{project.projectMembers}', name='projectMembers')
		p
			input(type='hidden', value='PUT', name='_method')
		p
			button#btnSubmit(type='submit').
				Uredi
		
		